<% form_tag session_path(:url => params[:url]) do -%>
  <%= error_messages_for :login_user %>
  <table cellpadding="0" cellspacing="0" border="0" id="login_form">
    <tr>
      <td class="login_form_labels"><label for="login">User Name:</label></td>
      <td class="login_form_field">
        <%= text_field_tag 'login', @login, {:autocomplete => 'off', :size => 10, :style => "width:82px;"} %>
      </td>
    </tr>
    <tr>
      <td class="login_form_labels"><label for="login">Password:</label></td>
      <td class="login_form_field">
        <%= password_field_tag 'password', nil, :size => 10, :style => "width:82px;" %>
      </td>
    </tr>
    <tr>
      <td colspan="2" id="center_text">or use</td>
    </tr>
    <tr>
      <td class="login_form_labels"><%= label_tag 'openid_url', 'OpenID' %>(<%= link_to 'info', 'http://openid.net/get-an-openid/what-is-openid/' %>):</td>
      <td class="login_form_field">
        <%= text_field_tag :openid_url, "", {:style => "width:102px;"} %>
      </td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td style="padding:10px 0px 15px 0px;">
         <%= check_box_tag 'remember_me', '1', @remember_me %>
         <label>Remember Me</label>
      </td>
    </tr>
    <% if session[:invitation_code] || session[:unique_code] %>
      <tr>
        <td>&nbsp;</td>
        <td style="padding:10px 0px 15px 0px;">
           <%= check_box_tag 'sponsor_allow', '1', false %>
           <label>Allow sponsor to send emails</label>
        </td>
      </tr>
    <% end %>
    <tr>
      <td>&nbsp;</td>
      <td>
        <%= submit_tag 'Log in' %>
      </td>
    </tr>
  </table>
<% end -%>
