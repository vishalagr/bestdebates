<div class="clear_both">
</div>
<br/>
<table cellpadding="0" cellspacing="0" border="0" width="100%">
    <tr>
        <td style="vertical-align:bottom;text-align:left;">
            <% unless @argument.children.empty? and !@argument.parent %>
            <div class="arg_list_top">
                See the "parents and children" of this argument below:
            </div>
            <!--<div class="grey-line"><%#= image_tag 'grey_line.png', :alt => "grey line" %></div>-->
            <% end %>
        </td>
        <td style="vertical-align:top;text-align:right;padding-right: 10px;">
            <%= render :partial => "shared/key_definitions" %>
        </td>
    </tr>
</table>
<div class="details" style="padding:0px 0px 0px 16px; width: 98%">
    <p>
        <%= render_partial "arguments/ratings" %>
    </p>
    <%= render_partial "arguments/parent" if @argument.parent %>
    <% if @argument.parent && !@argument.children.empty? %>
    <div class="grey-line">
        <%= image_tag 'grey_line.png', :alt => "grey line" %>
    </div>
    <% end %>
    <div class="sub_arguments">
        <%= render_partial "arguments/children" unless @argument.children.empty? %>
        <div class="clear_both">
            &nbsp;
        </div>
    </div>
    <div class="grey-line">
        <%= image_tag 'grey_line.png', :alt => "grey line" %>
    </div>
    <div class="more_relations">
        <%= render_partial 'arguments/more_relations' %>
    </div>
</div>
