
<%= link_to image_tag('add_argument_button.gif', :alt => 'add argument'), 
  new_debate_argument_url(debate , :code => params[:code]) if debate.can_by_written_by?(current_user)%>

<% if logged_in? %>
  <div style="margin-left:39px;margin-right:3px;margin-top:-34px;padding-bottom:5px;padding-top:5px;text-align:center;">
    <% form_remote_tag(
      :url => report_offensive_argument_path(debate),
      :confirm => 'Are you sure you want to report this debate as offensive?'
    ) do %>
      <%= submit_tag '&nbsp;Flag&nbsp;' %>
    <% end %>
  </div>
<% end %>
<%= render_partial 'shared/external_links'%>
<div class="clear_both"></div>
