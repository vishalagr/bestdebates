<div id="left-content">
  <div class="debate-argument">
    <div class="debate-listings">
      <div class="debate-argument-title-background"><h2>Update Debates Of The Day</h2></div>
      <div class="argument-form-inner">
        <div class="argument-form-wrapper">
          <div style="padding-left:10px;">
            
            <% form_tag debate_of_day_admin_categories_path do %>
              Debates of the day will show the topic of only those category which are set as display its topic show.</tr>

              <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr style="background-color:#A6A6A6">
                  <td>Categories</td>
                  <td>Hide</td>
                  <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
                  <td></td>
                </tr>

                <% categories_list.each do |category| -%>
                  <% content_tag :tr, :bgcolor => cycle("#E6E6E6", "#ffffff") do %>
                    <td><%= category.name %></td>
                    <td><%= check_box_tag 'categories_id[]', category.id, dod_category_checked?(category) %></td>
                    <td></td>
                  <% end %>
                <% end -%>
                
                <tr>
                  <td colspan="3" style="text-align: center"><%= submit_tag 'Save' %></td>
                </tr>
              </table>
            <% end %>
            
          </div>
          <div style="padding-right:10px;clear:both;"><br /></div>
        </div>
      </div>
    </div>
  </div>
  <div class="debate-listing-inner-footer"></div>
</div>
<div class="debate-listing-footer"></div>