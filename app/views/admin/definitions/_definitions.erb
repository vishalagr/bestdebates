<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr style="background-color:#A6A6A6">
    <td>&nbsp;<b>Definition</b></td>
    <td><b>Description</b></td>
    <td><b>Edit</b></td>
    <td><b>Delete</b></td>
  </tr>
  <% for definition in definitions %>
    <% content_tag :tr, :bgcolor => cycle("#E6E6E6", "#ffffff") do %>
      <td><%= definition.name %></td>
      <td><%= definition.description %></td>    
      <td><%= link_to image_tag('icon_edit.gif'), edit_admin_definition_path(definition) %></td>
      <td><%= link_to image_tag('delete-icon.gif'),    admin_definition_url(definition), :method => :delete, :confirm => "Are you sure you want to permanently delete category #{definition.name} and all its arguments? " %></td>
    <% end %>
  <% end %>
</table>